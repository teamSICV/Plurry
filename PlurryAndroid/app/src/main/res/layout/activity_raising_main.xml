<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".raising.RaisingMainActivity">

    <Button
        android:id="@+id/b_quit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/back"
        app:backgroundTint="@color/txt_orange_vivid"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <Button
        android:id="@+id/b_growing"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="성장하기"
        android:background="@drawable/img_icon_raise"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:id="@+id/t_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000"
        android:textAlignment="textEnd"
        android:textSize="30sp"
        android:textColor="@color/txt_orange_light"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/f_gage"
        app:layout_constraintBottom_toBottomOf="@id/f_gage"
        app:layout_constraintEnd_toStartOf="@id/f_gage" />

    <View
        android:id="@+id/bg_raise_gage"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/img_frame_raise_bg"
        android:paddingHorizontal="50dp"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="@id/f_gage"
        app:layout_constraintStart_toStartOf="@id/f_gage" />

    <ImageView
        android:id="@+id/g_raise"
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:background="@drawable/img_frame_raise_gage"
        android:paddingHorizontal="50dp"
        app:backgroundTint="@color/txt_pink_light"
        app:layout_constraintTop_toTopOf="@id/bg_raise_gage"
        app:layout_constraintStart_toStartOf="@id/bg_raise_gage"/>

    <TextView
        android:id="@+id/t_raisingAmount"
        android:layout_width="92dp"
        android:layout_height="17dp"
        android:text="000"
        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintTop_toTopOf="@id/b_growing"
        app:layout_constraintBottom_toBottomOf="@id/b_growing"
        app:layout_constraintStart_toStartOf="@id/b_growing"
        app:layout_constraintEnd_toEndOf="@id/b_growing"
        app:layout_constraintVertical_bias="0.75" />

    <TextView
        android:id="@+id/t_raisingPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000"
        android:textAlignment="textEnd"
        android:layout_marginEnd="30dp"
        android:textSize="15sp"
        android:textColor="@color/txt_brown_dark"
        app:layout_constraintTop_toTopOf="@id/f_gage"
        app:layout_constraintBottom_toBottomOf="@id/f_gage"
        app:layout_constraintEnd_toEndOf="@id/f_gage" />

    <ImageView
        android:id="@+id/f_gage"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/img_frame_raise"
        android:paddingHorizontal="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:backgroundTint="@color/txt_brown_light"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
        android:id="@+id/img_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:srcCompat="@drawable/img_bg_splash"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>