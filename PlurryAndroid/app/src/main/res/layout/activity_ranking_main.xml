<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ranking.RankingMainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="부문 이름"
                android:textSize="20sp"
                android:textAlignment="center"/>

            <FrameLayout
                android:layout_width="280dp"
                android:layout_height="250dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="280dp"
                    android:layout_height="250dp"
                    android:layout_marginTop="50dp"
                    android:src="@drawable/ranking" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/rankingImg1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_marginTop="28dp"
                    android:src="@drawable/basicprofile" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/rankingImg2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="bottom|start"
                    android:layout_marginBottom="108dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/basicprofile" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/rankingImg3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginBottom="91dp"
                    android:layout_marginEnd="11dp"
                    android:src="@drawable/basicprofile" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rankingMe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="14dp"
                    android:text="개인"
                    android:textSize="15dp"
                    android:clickable="true"/>

                <TextView
                    android:id="@+id/rankingCrewMe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="크루 내 개인"
                    android:textSize="14dp"
                    android:clickable="true"
                    android:textColor="@color/gray"/>

                <TextView
                    android:id="@+id/rankingCrew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="14dp"
                    android:text="크루"
                    android:textSize="15dp"
                    android:clickable="true"
                    android:textColor="@color/gray"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rankingRecyclerview"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>