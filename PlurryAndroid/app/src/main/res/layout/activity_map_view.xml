<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mapViewLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/walkIZnfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="거리: 0.0km     |   걸음: 0걸음   |     칼로리: 0kcal"
        android:textSize="16sp"
        android:background="#438cf3"
        android:textColor="#000000"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnExplore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="장소 탐색"
        android:backgroundTint="#438cf3"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/btnEndWalk"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/btnAddPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="장소 포인트 추가"
        android:backgroundTint="#438cf3"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/btnExplore"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/btnRefreshLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="위치 새로고침"
        android:backgroundTint="#438cf3"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/btnAddPoint"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/btnEndWalk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="산책 종료"
        android:backgroundTint="#c3a475"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>