<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:background="@drawable/img_frame_record">

        <TextView
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:text="사용자의 모든 데이터가\n즉시 삭제되며,\n복구할 수 없습니다.\n\n탈퇴하시겠습니까?"
            android:textAlignment="center"
            android:textColor="#7C643D"
            android:textStyle="bold"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/myPageExitBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="취소"
            android:layout_marginTop="240dp"
            android:background="@drawable/img_btn_brown_dark"
            android:textColor="#FFFFFF"
            app:backgroundTint="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/myPageExitOk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:text="확인"
            android:layout_marginTop="240dp"
            android:background="@drawable/img_btn_brown_dark"
            android:textColor="#FFFFFF"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>